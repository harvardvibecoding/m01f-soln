{
  "name": "trends-scraper-codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post_create.sh",
  "remoteEnv": {
    "CHROME_BIN": "/usr/bin/chromium"
  },
  "forwardPorts": [],
  "remoteUser": "vscode"
}
